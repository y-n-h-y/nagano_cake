<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="containar">
        <div class="logo">
          <%= image_tag('logo.png') %>
        </div>
        <nav>
          <ul>
            <li><%= link_to "About", about_path, class: 'menu' %></li>
            <li><%= link_to "商品一覧", about_path, class: 'menu' %></li>
            <li><%= link_to "新規登録", about_path, class: 'menu' %></li>
            <li><%= link_to "ログイン", about_path, class: 'menu' %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div class="top-space"></div>
    <%= yield %>
  </body>
</html>
