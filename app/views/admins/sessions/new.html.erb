<main>
  <div class="title">
    <h1>管理者ログイン</h1>
  </div>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: 'form-box' %>
  </div>

  <div class="field">
    <%= f.label :パスワード, class: 'label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-box'  %>
  </div>

  <!--<% if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <%= f.check_box :remember_me %>-->
  <!--    <%= f.label :remember_me %>-->
  <!--  </div>-->
  <!--<% end %>-->

  <div class="actions">
    <%= f.submit "ログイン", class: 'button' %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
</main>
